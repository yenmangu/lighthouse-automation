{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Jest: current test file",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
			"args": ["${fileBasename}", "--runInBand", "--watchAll=false"],
			"runtimeArgs": ["--experimental-vm-modules"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"skipFiles": ["<node_internals>/**"]
		},

		{
			"name": "Debug Jest (application code)",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": ["--runInBand"],
			"cwd": "${workspaceFolder}",

			"runtimeArgs": ["--experimental-vm-modules"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"runtimeExecutable": "node",

			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"type": "node"
		},

		{
			"name": "Debug Django Tests",
			"type": "debugpy",
			"request": "launch",
			"purpose": ["debug-test"],
			"justMyCode": false,
			"console": "integratedTerminal",
			"env": {
				"DJANGO_SETTINGS_MODULE": "study_stack.settings"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Jest (ESM)",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
			"args": ["--runInBand", "--runTestsByPath", "${file}"],
			"runtimeArgs": ["--experimental-vm-modules"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
